<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00AAEE">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/linlay1"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRAPE is an undertaking of a group of entrepreneurs aimed at developing educational tools for students.\n\n GRAPE also conducts workshops on various open source tools and embedded platforms.\n\n For any queries, mail us on \nconnect2grape@gmail.com\n\n"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:id="@+id/textView9" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="120"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp">


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:id="@+id/button72"
            android:layout_weight="20"
            android:background="@drawable/home"
            android:layout_marginRight="12dp"
            android:onClick="homer"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:id="@+id/button73"
            android:layout_weight="20"
            android:background="@drawable/facebook"
            android:layout_marginRight="12dp"
            android:onClick="facebooker"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:id="@+id/button74"
            android:layout_weight="20"
            android:background="@drawable/googleplay"
            android:layout_marginRight="12dp"
            android:onClick="googleplayer"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:id="@+id/button75"
            android:layout_weight="20"
            android:background="@drawable/share"
            android:layout_marginRight="12dp"
            android:onClick="sharer"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button76"
            android:layout_weight="20"
            android:background="@drawable/moreapps"
            android:layout_marginRight="12dp"
            android:onClick="moreapper"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:id="@+id/button77"
            android:layout_weight="20"
            android:background="@drawable/wordpress"
            android:onClick="wordpresser"
            />
    </LinearLayout>

</RelativeLayout>